pipeline{
    agent any
    environment
    {
        name1="jeff"
        name2="jail1"
    }
    stages{
        stage("build"){
        environment{
            name3="jais"
        }
        steps{
            echo "name ${name1}"
            echo "name ${name2}"
            echo "name ${name3}"
        }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}